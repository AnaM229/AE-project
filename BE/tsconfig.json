{
  "compilerOptions": {
    /* Output & Input */
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "src",
    "outDir": "dist",

    /* NodeJS */
    "lib": ["ES2020"],
    "types": ["node"],

    /* Type Checking */
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* Debug */
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
